// Task 2 :--> Simple Calculator using Switch Case

#include<iostream> 
using namespace std;

int main()
{
    int a,b;
    char oper; 

    cout << "Enter the Two numbers : ";
    cin >> a >> b;
    cout << "Enter Operator as menioned (+,-,*,/) : ";
    cin >> oper;

    switch(oper) 
    {
        case '+' : cout << "Addition of two numbers " << a+b <<endl;
        break;

        case '-' : cout << "Substraction of two numbers " << a-b <<endl;
        break;

        case '*' : cout << "Product of two numbers " << a*b <<endl;
        break;

        case '/' : cout << "Division of two numbers " << a/b <<endl;
        break;

        default : cout << "Invalid operation !";
        break;
    }
}
